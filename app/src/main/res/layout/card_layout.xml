<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ddd"
    tools:context=".ChoiceActivity"
    android:id="@+id/rl_card"
    android:padding="8dp">

    <!-- XML Code illustrating card layout usage. -->

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/purple"
        app:cardElevation="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="8dp">

            <TextView
                android:id="@+id/activityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:text="SpeechAid"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/examPic"
                android:layout_width="102dp"
                android:layout_height="71dp"
                android:layout_below="@+id/activityName"
                android:layout_marginTop="8dp"
                android:src="@drawable/activity"
                />

            <TextView
                android:id="@+id/activityType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="52dp"
                android:layout_marginTop="61dp"
                android:gravity="center"
                android:text="improve comprehension and speech skills"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/examPic2"
                android:layout_width="102dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="128dp"
                android:src="@drawable/info"
                />

            <TextView
                android:id="@+id/activityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/activityType"
                android:layout_alignTop="@+id/examPic2"
                android:gravity="center"
                android:text="Read out words to improve comprehension"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>



